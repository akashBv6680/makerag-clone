# ===================================
# MakeRAG Environment Configuration
# ===================================

# API Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql://makerag:makerag123@localhost:5432/makerag_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_AUTH=neo4j:makerag123

# Vector Database (Pinecone)
PINCONE_API_KEY=your_pinecone_api_key
PINCONE_ENVIRONMENT=production
PINCONE_INDEX_NAME=makerag
PINCONE_DIMENSION=1536

# Alternative: Weaviate
WEAVIATE_URL=http://localhost:8080

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Alternative LLM Providers
COHERE_API_KEY=your_cohere_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Authentication & Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@makerag.com

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=["pdf","txt","docx","xlsx","csv"]
UPLOAD_DIRECTORY=./uploads

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379
CELERY_TASK_TRACK_STARTED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/makerag.log
SENTRY_DSN=your_sentry_dsn

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_VECTOR_SEARCH=true
ENABLE_GRAPH_SEARCH=true
ENABLE_HYBRID_SEARCH=true
ENABLE_DOCUMENT_CHUNKING=true
ENABLE_RAG_MODE=true

# Performance & Optimization
VECTOR_BATCH_SIZE=32
MAX_CONTEXT_LENGTH=4096
TOP_K_RESULTS=5
CONFIDENCE_THRESHOLD=0.3

# Development Settings
DEBUG=false
TEST_MODE=false
ALLOW_CORS_CREDENTIALS=true

# Deployment Environment
ENVIRONMENT=development  # development, staging, production

# Third-party Services
GITHUB_TOKEN=your_github_token
SLACK_WEBHOOK_URL=your_slack_webhook_url
